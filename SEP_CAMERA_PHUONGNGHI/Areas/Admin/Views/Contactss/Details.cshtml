@model SEP_CAMERA_PHUONGNGHI.Models.Contact

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_mLayoutAdmin.cshtml";
}


<div class="page-inner">
    <div class="page-header">
        <Strong class="page-title">CÁC VẤN ĐỀ CỦA KHÁCH HÀNG</Strong>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Mô tả vấn đề gặp phải</strong>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            <strong>Tên khách hàng</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ContactName)
                        </dd>

                        <dt>
                            <strong>Email</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.email)
                        </dd>

                        <dt>
                            <strong>Địa chỉ</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.address)
                        </dd>

                        <dt>
                            <strong>Số điện thoại</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.phone)
                        </dd>

                        <dt>
                            <strong>Nội dung vấn đề</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ct_content)
                        </dd>
                    </dl>
                </div>

                <div class="card-action">
                    <a style="font-size:16px" href="@Url.Action("Index")">Quay lại</a>
                </div>

            </div>
        </div>
    </div>
</div>


