@model SEP_CAMERA_PHUONGNGHI.Models.Contact

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_mLayoutAdmin.cshtml";
}



<div class="page-inner">
    <div class="page-header">
        <Strong class="page-title">CÁC VẤN ĐỀ CỦA KHÁCH HÀNG</Strong>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Xóa vấn đề</h3>
                            <strong>Bạn có chắc muốn xóa vấn đề này không?</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a style="font-size:16px" href="@Url.Action("Index")">Quay lại</a>
                        </div>
                    </div>
                </div>

                <div class="card-body">


                    <dl class="dl-horizontal">
                        <dt>
                            <strong>Tên khách hàng</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ContactName)
                        </dd>

                        <dt>
                            <strong>Email</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.email)
                        </dd>

                        <dt>
                            <strong>Địa chỉ</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.address)
                        </dd>

                        <dt>
                            <strong>Số điện thoại</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.phone)
                        </dd>

                        <dt>
                            <strong>Nội dung vấn đề</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ct_content)
                        </dd>
                    </dl>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="card-action">
                        <div class="form-actions">
                            <input type="submit" value="Xóa" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
