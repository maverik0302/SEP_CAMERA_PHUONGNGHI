@model SEP_CAMERA_PHUONGNGHI.Models.tbProduct

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_mLayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create", "tbProducts", FormMethod.Post, new { @enctype = "multipart/form-data" } ))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="page-inner">
        <div class="page-header">
            <Strong class="page-title">QUẢN LÍ SẢN PHẨM</Strong>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Tạo mới sản phẩm</strong>
                            </div>
                            <div class="col-md-6 text-right">
                                <a style="font-size:16px" href="@Url.Action("Index")">Quay lại</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Hình ảnh</label>
                            <div class="col-md-10">
                               <input name="img" type="file" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Giá</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", type = "Number", min = 1 } })
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Giá khuyến mãi</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PromotionPrice, new { htmlAttributes = new { @class = "form-control", type = "Number", min = 1 } })
                                @Html.ValidationMessageFor(model => model.PromotionPrice, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Tồn kho</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TonKho, new { htmlAttributes = new { @class = "form-control", type = "Number", min = 1 } })
                                @Html.ValidationMessageFor(model => model.TonKho, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Bảo hành</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.BaoHanh, new { htmlAttributes = new { @class = "form-control", type = "Number", min = 1 } })
                                @Html.ValidationMessageFor(model => model.BaoHanh, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Miêu tả</label>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Desciption, new { @class = "form-control", @row = "3", required = "required"})
                                @Html.ValidationMessageFor(model => model.Desciption, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Hãng sản phẩm</label>
                            <div class="col-md-10">
                                @Html.DropDownList("brand_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.brand_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Danh mục</label>
                            <div class="col-md-10">
                                @Html.DropDownList("category_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.category_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Tạo mới</button>
                        <button class="btn btn-danger">Hủy bỏ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
