@model IEnumerable<SEP_CAMERA_PHUONGNGHI.Models.OrderDetail>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_mLayoutAdmin.cshtml";
}


<div class="page-inner">
    <div class="page-header">
        <Strong class="page-title">QUẢN LÍ ĐƠN HÀNG</Strong>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Chi tiết đơn hàng</strong>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thread>
                                <tr>
                                    <th>ID</th>
                                    <th>
                                        Tên sản phẩm
                                    </th>
                                    <th>
                                        Giá
                                    </th>
                                    <th>
                                        Số lượng
                                    </th>
                                    <th>
                                        Tổng giá tiền
                                    </th>
                                </tr>
                            </thread>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>
                                        Tên sản phẩm
                                    </th>
                                    <th>
                                        Giá
                                    </th>
                                    <th>
                                        Số lượng
                                    </th>
                                    <th>
                                        Tổng giá tiền
                                    </th>
                                </tr>
                            </tfoot>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.detail_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProduct.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.price_product)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.num)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.total_price_product)
                                    </td>
                                </tr>
                            }
                        </table>

                        <div class="card-action">
                            <a style="font-size:16px" href="@Url.Action("Index")">Quay lại</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
