@model SEP_CAMERA_PHUONGNGHI.Models.Oder

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_mLayoutAdmin.cshtml";
}



<div class="page-inner">
    <div class="page-header">
        <Strong class="page-title">QUẢN LÍ ĐƠN HÀNG</Strong>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Mô tả đơn hàng</strong>
                        </div>
                        @*<div class="col-md-6 text-right">
                                <a style="font-size:16px" href="@Url.Action("Edit", new { id = Model.category_id})">Chỉnh sửa danh mục</a>
                            </div>*@
                    </div>
                </div>
                <div class="card-body">

                    <dl class="dl-horizontal">
                        <dt>
                            <strong>
                                Ngày đặt hàng
                            </strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.orderdate)
                        </dd>

                        <dt>
                            <strong>
                                Trạng thái
                            </strong>

                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Status)
                        </dd>

                        <dt>
                            <strong>
                                Tình trạng giao hàng
                            </strong>

                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Delivered)
                        </dd>

                        <dt>
                            <strong>
                                Ngày giao hàng
                            </strong>

                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DeliveryDate)
                        </dd>

                        <dt>
                            <strong>
                                Tổng giá trị
                            </strong>

                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.total_price)
                        </dd>

                        <dt>
                            <strong>
                                Tên khách hàng
                            </strong>

                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.user_id)
                        </dd>

                    </dl>
                </div>

                <div class="card-action">
                    <a style="font-size:16px" href="@Url.Action("Index")">Quay lại</a>
                </div>

            </div>
        </div>
    </div>
</div>
