@model SEP_CAMERA_PHUONGNGHI.Models.About

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_mLayoutAdmin.cshtml";
}

<div class="page-inner">
    <div class="page-header">
        <Strong class="page-title">QUẢN LÍ BÀI GIỚI THIỆU</Strong>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Xóa bài giới thiệu</h3>
                            <strong>Bạn có chắc muốn xóa bài giới thiệu không?</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a style="font-size:16px" href="@Url.Action("Index")">Quay lại</a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            <strong>Tiêu đề</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt>
                            <strong>Miêu tả</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt>
                            <strong>Người tạo</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Owner)
                        </dd>

                        <dt>
                            <strong>Ngày tạo</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CreateDate)
                        </dd>

                        <dt>
                            <strong>Ngày cập nhật</strong>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UpdateDate)
                        </dd>

                    </dl>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="card-action">
                        <div class="form-actions">
                            <input type="submit" value="Xóa" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>