@model SEP_CAMERA_PHUONGNGHI.Models.About

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_mLayoutAdmin.cshtml";
}


@using (Html.BeginForm("Create", "About", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="page-inner">
        <div class="page-header">
            <Strong class="page-title">QUẢN LÍ BÀI GIỚI THIỆU</Strong>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Tạo mới bài giới thiệu</strong>
                            </div>
                            <div class="col-md-6 text-right">
                                <a style="font-size:16px" href="@Url.Action("Index")">Quay lại</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Tiêu đề</label>  
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Miêu tả</label>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = "6", required = "required" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*<div class="form-group">
                            <label>Người tạo</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Owner, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Owner, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Tạo mới</button>
                        <button class="btn btn-danger">Hủy bỏ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

