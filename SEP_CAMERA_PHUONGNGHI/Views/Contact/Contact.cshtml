
@{
    ViewBag.Title = "Contact";
}

<div class="site__body">
    <div class="page-header">
        <div class="page-header__container container">
            <div class="page-header__title">
                <h1>Liên hệ</h1>
            </div>
        </div>
    </div>
    <div class="block">
        <div class="container">
            <div class="card mb-0">
                <div class="card-body contact-us">
                    <div class="contact-us__container">
                        <div class="row">
                            <div class="col-12 col-lg-6 pb-4 pb-lg-0">
                                <h4 class="contact-us__header card-title">Địa chỉ</h4>
                                <div class="contact-us__address">
                                    <p>
                                        453A/38/12 Bùi Minh Trực, Phường 6, Quận 8, TP.HCM<br>
                                        cameraphuongnghihuynh@gmail.com<br>
                                        0982.76.77.99
                                    </p>
                                    <p>
                                        <strong>Thời gian mở cửa</strong><br>Mon-Sat 10:00pm - 7:00pm
                                    <p>
                                        <strong>Comment</strong><br>An toàn - Chất lượng - Bảo vệ ngôi nhà bạn
                                    </p>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <h4 class="contact-us__header card-title">Để chúng tôi liên hệ bạn</h4>
                                <form>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="form-name">
                                                Họ và tên
                                            </label> <input type="text" id="form-name"
                                                            class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="form-email">Email</label>
                                            <input type="email" id="form-email" class="form-control"
                                                   placeholder="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="form-message">Thông tin cần liên hệ</label> <textarea id="form-message" class="form-control" rows="4"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Gửi tin</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
