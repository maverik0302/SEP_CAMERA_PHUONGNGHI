@using SEP_CAMERA_PHUONGNGHI.Models
@{SEP25Team01Entities db = new SEP25Team01Entities();
    var category = db.Categories.ToList();
    var post = db.Posts.ToList();
    var slide = db.Slides.ToList();
    var product = db.tbProducts.ToList();
    var brand = db.Brands.ToList();
    ViewBag.Title = "Home Page";

}



<div class="block-slideshow block-slideshow--layout--with-departments block">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-9 offset-lg-3">
                <div class="block-slideshow__body">
                    <div class="owl-carousel">
                        @foreach (var item in slide)
                        {

                            <a class="block-slideshow__slide" href="#">
                                <div class="block-slideshow__slide-image block-slideshow__slide-image--desktop"
                                     style="background-image: url('@Url.Content("~/Content/image/ImgSlide/" + item.Image)')"></div>

                                <div class="block-slideshow__slide-image block-slideshow__slide-image--mobile"
                                     style="background-image: url('@Url.Content("~/Content/image/ImgSlide/" + item.Image)')">
                                </div>

                                <div class="block-slideshow__slide-content">
                                    <div class="block-slideshow__slide-title ">
                                        @item.TitleSlide
                                    </div>
                                    <div class="block-slideshow__slide-text">
                                        @item.DescriptionSlide
                                    </div>
                                    <div class="block-slideshow__slide-button">
                                        <span class="btn btn-primary btn-lg">@item.Name</span>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- .block-slideshow / end -->
<!-- .block-features -->

<div class="block block-features block-features--layout--classic">
    <div class="container">
        <div class="block-features__list cover-cs">
            <div class="block-features__item cover">
                <div class="block-features__content">
                    <div class="block-features__title" style="color:snow">Miễn phí vẫn chuyển</div>
                    <div class="block-features__subtitle" style="color:snow">Đơn hàng từ 100,000 đ</div>
                </div>
            </div>
            <div class="block-features__divider"></div>
            <div class="block-features__item">
                <div class="block-features__content">
                    <div class="block-features__title" style="color:snow">Hỗ trợ 24/7</div>
                    <div class="block-features__subtitle" style="color:snow">Chúng tôi luôn bên bạn mọi lúc</div>
                </div>
            </div>
            <div class="block-features__divider"></div>
            <div class="block-features__item">
                <div class="block-features__content">
                    <div class="block-features__title" style="color:snow">100% An toàn</div>
                    <div class="block-features__subtitle" style="color:snow">Bảo mật tốt nhất cho bạn</div>
                </div>
            </div>
            <div class="block-features__divider"></div>
            <div class="block-features__item">
                <div class="block-features__content">
                    <div class="block-features__title" style="color:snow">Lắp Đặt Chuyên Nghiệp</div>
                    <div class="block-features__subtitle" style="color:snow">Đội ngũ lắp đặt, tư vấn kỹ thuật giàu kinh nghiệm</div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="block block-products-carousel" data-layout="grid-4">
    <div class="container">
        <div class="block-header">
            <h3 class="block-header__title">Sản phẩm</h3>
            <div class="block-header__divider"></div>
            <div class="block-header__arrows-list">
                <button class="block-header__arrow block-header__arrow--left" type="button">
                    <svg width="7px"
                         height="11px">
                        <use xlink:href="images/sprite.svg#arrow-rounded-left-7x11"></use>
                    </svg>
                </button> <button class="block-header__arrow block-header__arrow--right"
                                  type="button">
                    <svg width="7px" height="11px">
                        <use xlink:href="images/sprite.svg#arrow-rounded-right-7x11"></use>
                    </svg>
                </button>
            </div>
        </div>
        <div class="block-products-carousel__slider">
            <div class="block-products-carousel__preloader"></div>
            <div class="owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="block-products-carousel__column">
                        <div class="block-products-carousel__cell">
                            <div class="product-card" style="margin-bottom:1px">
                                <div class="product-card__image">
                                    <a href="~/ShopGrid/ProductDetail?id=@item.product_id">
                                        <img src="~/Content/image/ImgProduct/@item.Thumnail" alt="">
                                    </a>
                                </div>
                                <div class="product-card__info">
                                    <div class="product-card__name">
                                        <a href="~/ShopGrid/ProductDetail?id=@item.product_id">
                                            @item.Name
                                        </a>
                                    </div>
                                </div>
                                <div class="product-card__actions">
                                    <div class="product-card__prices">@String.Format("{0:0,0}", item.PromotionPrice) đ</div>
                                    <span class="product-card__old-price">@String.Format("{0:0,0}", item.Price) đ</span>
                                    <div class="product-card__buttons">
                                        <button class="btn btn-primary product-card__addtocart" type="button">
                                            Thêm vào giỏ
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- .block-banner -->
<div class="block block-banner">
    <div class="container">
        
        <a href="#" class="block-banner__body">
            <div class="block-banner__image block-banner__image--desktop"
                 style=" background-image: url('../../content/image/imgbanner/banner-2.jpg'); "></div>
            <div class="block-banner__image block-banner__image--mobile"
                 style=" background-image: url('../../content/image/imgbanner/banner-2.jpg'); "></div>
            <div class="block-banner__title" style="color:aliceblue">Chào mừng đến với camera Phương Nghi<br class="block-banner__mobile-br"></div>
            <div class="block-banner__text" style="color:aliceblue">Camera, đầu ghi hình, phụ kiện</div>
            <div class="block-banner__button"><span class="btn btn-sm btn-primary">Mua Sắm Ngay</span></div>
        </a>
    </div>
</div>
<!-- .block-banner / end -->

<div class="block block-posts block-posts--layout--list-sm" data-layout="list-sm">
    <div class="container">
        <div class="block-header">
            <h3 class="block-header__title">Bài viết</h3>
            <div class="block-header__divider"></div>
            <div class="block-header__arrows-list">
                <button class="block-header__arrow block-header__arrow--left" type="button">
                    <svg width="7px" height="11px">
                        <use xlink:href="images/sprite.svg#arrow-rounded-left-7x11"></use>
                    </svg>
                </button> <button class="block-header__arrow block-header__arrow--right" type="button">
                    <svg width="7px" height="11px">
                        <use xlink:href="images/sprite.svg#arrow-rounded-right-7x11"></use>
                    </svg>
                </button>
            </div>
        </div>
        <div class="block-posts__slider">
            <div class="owl-carousel owl-loaded owl-drag">
                <div class="owl-stage-outer">
                    <div class="owl-stage" style="transform: translate3d(-2400px, 0px, 0px); transition: all 0s ease 0s; width: 9600px;">
                        @foreach (var item in post)
                        {
                            <div class="owl-item cloned" style="width: 450px; margin-right: 30px;">
                                <div class="post-card">
                                    <div class="post-card__image">
                                        <a href="~/Blog/BlogDetail?id=@item.post_id"><img src="@Url.Content("~/Content/image/ImgPost/" + item.Image)" alt=""></a>
                                    </div>
                                    <div class="post-card__info">
                                        <div class="post-card__category"><a href="~/Blog/BlogDetail?id=@item.post_id">Xem tin</a></div>
                                        <div class="post-card__name">
                                            <a href="~/Blog/BlogDetail?id=@item.post_id">
                                                @item.Name
                                            </a>
                                        </div>
                                        <div class="post-card__content">
                                            @item.Description
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="owl-nav disabled">
                    <button type="button" role="presentation" class="owl-prev"><span aria-label="Previous">‹</span></button>
                    <button type="button" role="presentation" class="owl-next"><span aria-label="Next">›</span></button>
                </div>
                <div class="owl-dots disabled"></div>
            </div>
        </div>
    </div><!-- .block-posts / end -->
</div>

<div class="block block-brands">
    <div class="container">
        <div class="block-brands__slider">
            <div class="owl-carousel">
                @foreach (var item in brand)
                {
                    <div class="block-brands__item">
                       
                        <h2 style="color:dodgerblue">
                            <a href="@Url.Action("ThuongHieu", "ShopGrid", new { id = item.brand_id})">
                                @item.Name
                            </a>
                        </h2>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="block block--highlighted block-categories block-categories--layout--classic">
    <div class="container">
        <div class="block-header">
            <h3 class="block-header__title">Danh mục tiêu biểu</h3>
            <div class="block-header__divider"></div>
        </div>
        <div class="block-categories__list">
            @foreach(var item in category) {
            <div class="block-categories__item category-card category-card--layout--classic">
                <div class="category-card__body">
                    <div class="category-card__image">
                        <a href="#">

                            <img src="~/Content/image/Logo/2934068.png" />
                        </a>
                    </div>
                    <div class="category-card__content">
                        <div class="category-card__name"><a href="@Url.Action("Category", "ShopGrid", new {id = item.category_id})">@item.Name</a></div>
                        
                        <div class="category-card__all"><a href="@Url.Action("Category", "ShopGrid", new {id = item.category_id})">Xem ngay</a></div>
                        <div class="category-card__products">134 Products</div>
                    </div>
                </div>
            </div>
            }
     
        </div>
    </div>
</div>


          
